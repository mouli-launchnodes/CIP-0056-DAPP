// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  partyId   String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  tokens    Token[]
  holdings  Holding[]
  transactions Transaction[]

  @@map("users")
}

model Token {
  id               String   @id @default(cuid())
  name             String
  currency         String   // USD, EUR, GBP
  quantityPrecision Int     @default(2)
  pricePrecision   Int     @default(2)
  contractAddress  String   @unique
  contractOwner    String
  totalSupply      Decimal  @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Relations
  creator     User        @relation(fields: [creatorId], references: [id])
  creatorId   String
  holdings    Holding[]
  transactions Transaction[]

  @@map("tokens")
}

model Holding {
  id              String   @id @default(cuid())
  totalBalance    Decimal  @default(0)
  freeCollateral  Decimal  @default(0)
  lockedCollateral Decimal @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  user    User   @relation(fields: [userId], references: [id])
  userId  String
  token   Token  @relation(fields: [tokenId], references: [id])
  tokenId String

  @@unique([userId, tokenId])
  @@map("holdings")
}

model Transaction {
  id            String          @id @default(cuid())
  type          TransactionType
  amount        Decimal
  fromPartyId   String?
  toPartyId     String?
  transactionHash String?
  status        TransactionStatus @default(PENDING)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  // Relations
  user    User   @relation(fields: [userId], references: [id])
  userId  String
  token   Token  @relation(fields: [tokenId], references: [id])
  tokenId String

  @@map("transactions")
}

enum TransactionType {
  MINT
  TRANSFER
  BURN
}

enum TransactionStatus {
  PENDING
  CONFIRMED
  FAILED
}